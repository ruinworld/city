<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shitouren.city"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:name="com.shitouren.app.GlobleApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.shitouren.city.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.shitouren.city.PubishActivity" ></activity>
        <activity android:name="com.shitouren.city.SquareActivity"></activity>
        <activity android:name="com.shitouren.city.MessageActivity"></activity>
        <activity android:name="com.shitouren.city.MineActivity"></activity>
        <activity android:name="com.shitouren.city.IndexActivity"></activity>
    </application>

</manifest>
